---
import Image from 'astro/components/Image.astro'
import im1 from '../assets/images/mdf-paneli-v-interere-gostinoj-1.webp'
import im2 from '../assets/images/chem-udalit-super-klej-s-plastika-.webp'
import im3 from '../assets/images/orig.gif'
import im4 from '../assets/images/gde-luchshe-zhit-v-rossii-na-pensii.webp'

const images = [
	{
		src: im1,
		alt: 'Интерьер',
		link: '/category/интерьер/1'
	},
	{
		src: im2,
		alt: 'Полезные советы',
		link: '/category/полезные-советы/1'
	},
	{
		src: im3,
		alt: 'Ремонт и отделка',
		link: '/category/ремонт-и-отделка/1'
	},
	{
		src: im4,
		alt: 'Это интересно',
		link: '/category/другое/1'
	}
]
---

<div class='mx-auto mt-6 mb-20 w-full sm:px-6 grid grid-cols-1 2xl:grid-cols-3 lg:gap-x-8 lg:px-8'>
	<a
		href={images[0].link}
		class='grid 2xl:grid-cols-1 gap-y-8 aspect-h-4 aspect-w-3 sm:overflow-hidden rounded-lg lg:block relative group'
	>
		<Image
			src={images[0].src}
			alt={images[0].alt}
			class='h-full w-full object-cover object-center brightness-75 transition-transform duration-500 rounded-lg transform group-hover:scale-110 group-hover:brightness-100'
		/>
		<div class='absolute inset-0 flex items-center justify-center'>
			<span class='text-white text-3xl xl:px-6 font-bold'>
				{images[0].alt}
			</span>
		</div>
	</a>
	<div class='grid grid-cols-2 2xl:grid-cols-1 gap-x-4 gap-y-8 my-4 2xl:my-0'>
		{
			images.slice(1, 3).map((image, index) => (
				<a
					key={index}
					href={image.link}
					class='aspect-h-2 aspect-w-3 overflow-hidden rounded-lg relative group'
				>
					<Image
						src={image.src}
						alt={image.alt}
						class='h-full w-full object-cover object-center brightness-75 transition-transform duration-500 transform group-hover:scale-110 group-hover:brightness-100'
					/>
					<div class='absolute inset-0 flex items-center justify-center'>
						<span class='text-white text-lg lg:text-xl 2xl:text-3xl xl:px-6 font-bold'>
							{image.alt}
						</span>
					</div>
				</a>
			))
		}
	</div>
	<a
		href={images[3].link}
		class='grid 2xl:grid-cols-1 gap-y-8 aspect-h-5 aspect-w-4 lg:aspect-h-4 lg:aspect-w-3 sm:overflow-hidden rounded-lg relative group'
	>
		<Image
			src={images[3].src}
			alt={images[3].alt}
			class='h-full w-full object-cover object-center brightness-75 transition-transform duration-500 transform group-hover:scale-110 group-hover:brightness-100 rounded-lg'
		/>
		<div class='absolute inset-0 flex items-center justify-center'>
			<span class='text-white text-3xl xl:px-6 font-bold'>
				{images[3].alt}
			</span>
		</div>
	</a>
</div>
